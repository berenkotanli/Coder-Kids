<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="campaignsPageFragment"
            type="com.beren.capstone_project.fragments.CampaignsPageFragment" />
        <variable
            name="discountadapter"
            type="com.beren.capstone_project.adapters.CampaignsItemAdapter" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CampaignsPageFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_discount"
        android:layout_width="385dp"
        android:layout_height="478dp"
        app:adapter="@{discountadapter}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="187dp"
        android:layout_marginLeft="187dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="136dp"
        android:layout_marginRight="136dp"
        android:onClick="@{()->campaignsPageFragment.updateDiscount()}"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_discount" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>